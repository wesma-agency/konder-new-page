'use strict';

jQuery(document).ready(function(){

	jQuery(".news__slider").slick({
	    slidesToShow: 3,
	    slidesToScroll: 1,
	    appendArrows: jQuery('.news__buttons'),
	    responsive: [
	      {
	        breakpoint: 768,
	        settings: {
	          slidesToShow: 2,
	          slidesToScroll: 1,
	        },
	      },
	      {
	        breakpoint: 500,
	        settings: {
	          slidesToShow: 1,
	          slidesToScroll: 1,
	        },
	      },
	    ],
	  });

});